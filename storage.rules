rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Ürün görselleri - herkes okuyabilir, sadece admin yükleyebilir
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Site içerik görselleri
    match /site-content/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Genel yüklemeler - sadece admin
    match /{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
