{
  "permissions": {
    "allow": [
      "Bash(npm run build:*)",
      "Bash(npm run dev:*)",
      "Bash(npm install:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(find:*)",
      "Bash(git pull:*)",
      "Bash(git rm:*)",
      "Bash(git checkout:*)",
      "WebSearch",
      "Bash(grep:*)",
      "Bash(git stash:*)",
      "mcp__ide__getDiagnostics",
      "Bash(tree:*)",
      "Bash(npx tsc:*)",
      "Bash(node -e:*)",
      "Bash(node:*)",
      "Bash(cat:*)",
      "Bash(curl:*)",
      "Bash(npx playwright install:*)",
      "Bash(npx tsx:*)",
      "Bash(git rebase:*)",
      "Bash(dig:*)",
      "Bash(nslookup:*)",
      "Bash(npx firebase hosting:channel:deploy:*)",
      "WebFetch(domain:www.dandelionchocolate.com)",
      "Bash(ls:*)",
      "Bash(claude mcp list:*)",
      "Bash(firebase deploy:*)",
      "Bash(chmod:*)"
    ]
  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/approval-notification.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash(firebase deploy.*)|Bash(git push.*)|Bash(npm run build.*)",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"[console]::beep(800,150)\"",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"[console]::beep(1000,200); Start-Sleep -Milliseconds 100; [console]::beep(1200,200)\"",
            "timeout": 2
          }
        ]
      }
    ]
  }
}
