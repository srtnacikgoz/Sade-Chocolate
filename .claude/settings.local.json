  },
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/approval-notification.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Write|Edit|Bash(firebase deploy.*)|Bash(git push.*)|Bash(npm run build.*)",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"[console]::beep(800,150)\"",
            "timeout": 2
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -Command \"'Hook triggered at ' + (Get-Date) | Out-File -Append -FilePath '.claude/hook-log.txt'; [console]::beep(1000,500)\"",
            "timeout": 3
          }
        ]
      }
    ]
  }
}
